	bindsym n exec i3-msg move container to workspace "Notes" && i3-msg mode "default"
	bindsym 2 exec i3-msg move container to workspace "Communications" && i3-msg mode "default"
	bindsym 3 exec i3-msg move container to workspace "Development" && i3-msg mode "default"
	bindsym 4 exec i3-msg move container to workspace "Production" && i3-msg mode "default"
	bindsym v exec i3-msg move container to workspace "Virt" && i3-msg mode "default"
	bindsym a exec i3-msg move container to workspace "Accounts" && i3-msg mode "default"
	bindsym f exec i3-msg move container to workspace "Finance" && i3-msg mode "default"
	bindsym m exec i3-msg move container to workspace "Media" && i3-msg mode "default"
	bindsym t exec i3-msg move container to workspace "TV" && i3-msg mode "default"

	# Move the focused window to the scratchpad
	bindsym h move scratchpad; mode "default"
	
	bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}

bindsym $mod+m mode "move"

# Layout mode - change container layout
mode "layout" {
	# stacked
	bindsym 3 exec i3-msg layout stacking && i3-msg mode "default"
	# tabbed
	bindsym 2 exec i3-msg layout tabbed && i3-msg mode "default"
	# toggle split
	bindsym 1 exec i3-msg layout toggle split && i3-msg mode "default"
	bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $alt+l mode "default"
}

bindsym $alt+l mode "layout
	
