# workspace mode 
mode "workspace" {
	# Add a workspace on the left or right
	bindsym l mode "workspace left"
	bindsym r mode "workspace right"
	
	# Move the focused workspace to the display on the right or left
	bindsym Left exec i3-msg move workspace to output left && i3-msg  mode "default"
	bindsym Right exec i3-msg move workspace to output right && i3-msg  mode "default"
	
	# VM workspace mode
	bindsym v mode "vm workspace"
	
	# Go to named workspace
	bindsym s exec i3-msg workspace "System" && i3-msg mode "default"
	bindsym b exec i3-msg workspace "Browser" && i3-msg mode "default"
	bindsym c exec i3-msg workspace "Config" && i3-msg mode "default"
	bindsym r exec i3-msg workspace "Research" && i3-msg mode "default"
	bindsym 0 exec i3-msg workspace "Dashboard" && i3-msg mode "default"
	bindsym n exec i3-msg workspace "Notes" && i3-msg mode "default"
	bindsym 2 exec i3-msg workspace "Communications" && i3-msg mode "default"
	bindsym 3 exec i3-msg workspace "Development" && i3-msg mode "default"
	bindsym 4 exec i3-msg workspace "Production" && i3-msg mode "default"
	bindsym v exec i3-msg workspace "Virt" && i3-msg mode "default"
	bindsym a exec i3-msg workspace "Accounts" && i3-msg mode "default"
	bindsym f exec i3-msg workspace "Finance" && i3-msg mode "default"
	bindsym m exec i3-msg workspace "Media" && i3-msg mode "default"
	bindsym t exec i3-msg workspace "TV" && i3-msg mode "default"

	# back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+w mode "default"
}

bindsym $mod+w mode "workspace"

# Launch a workspace on the left display ($mod+w, then l to enter this mode)
mode "workspace left" {
	bindsym s exec i3-msg focus output Virtual-1 && i3-msg workspace "System" && i3-msg mode "default"
	bindsym b exec i3-msg focus output Virtual-1 && i3-msg workspace "Browser" && i3-msg mode "default"
	bindsym c exec i3-msg focus output Virtual-1 && i3-msg workspace "Config" && i3-msg mode "default"
	bindsym r exec i3-msg focus output Virtual-1 && i3-msg workspace "Refresh" && i3-msg mode "default"
	bindsym 0 exec i3-msg focus output Virtual-1 && i3-msg workspace "Dashboard" && i3-msg mode "default"
	bindsym n exec i3-msg focus output Virtual-1 && i3-msg workspace "Notes" && i3-msg mode "default"
	bindsym 2 exec i3-msg focus output Virtual-1 && i3-msg workspace "Communications" && i3-msg mode "default"
	bindsym 3 exec i3-msg focus output Virtual-1 && i3-msg workspace "Development" && i3-msg mode "default"
	bindsym 4 exec i3-msg focus output Virtual-1 && i3-msg workspace "Production" && i3-msg mode "default"
	bindsym v exec i3-msg focus output Virtual-1 && i3-msg workspace "Virt" && i3-msg mode "default"
	bindsym a exec i3-msg focus output Virtual-1 && i3-msg workspace "Accounts" && i3-msg mode "default"
