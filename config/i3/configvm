# VM workspace mode ($mod+w then v to enter this mode)
# this mode adds VM workspaces to both displays
mode "vm workspace" {
	bindsym 0 exec i3-msg focus output Virtual-1 && i3-msg workspace "VM0-L" && i3-msg focus output Virtual-2 && i3-msg workspace "VM0-R" && i3-msg mode "default"
	bindsym 1 exec i3-msg focus output Virtual-1 && i3-msg workspace "VM1-L" && i3-msg focus output Virtual-2 && i3-msg workspace "VM1-R" && i3-msg mode "default"
	bindsym 2 exec i3-msg focus output Virtual-1 && i3-msg workspace "VM2-L" && i3-msg focus output Virtual-2 && i3-msg workspace "VM2-R" && i3-msg mode "default"
	bindsym 3 exec i3-msg focus output Virtual-1 && i3-msg workspace "VM3-L" && i3-msg focus output Virtual-2 && i3-msg workspace "VM3-R" && i3-msg mode "default"
	bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+w mode "default"Dashboard
}                     

