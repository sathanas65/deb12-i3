client.urgent                   #2f343a         #900000         #ffffff         #ffffff        #900000
client.placeholder              #000000         #000000         #ffffff         #ffffff        #0c0c0c

# Hide/Show bar
bindsym $mod+Shift+b exec sh scripts/togglebar.sh

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks
        tray_output primary 
        font pango:Source Code Pro Bold 10
        i3bar_command i3bar --transparency
        colors {
			background #00000000
			statusline #ffffff
			separator #666666
			#<colorclass> <border> <background> <text>
			focused_workspace  #5f049b #5f049b #ffffff
			active_workspace   #5f049b #000000 #ffffff
			inactive_workspace #ffffff #000000 #ffffff
			urgent_workspace   #e01e1e #e01e1e #ffffff
			binding_mode       #e01e1e #ffffff #e01e1e
		}
}

# Transparency with picom compositor
exec_always picom -f

