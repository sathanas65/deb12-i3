set $ws8 "Media"
set $ws9 "System"
set $ws10 "Research"
set $ws11 "TV"
set $ws12 "Finance
set $ws13 "Research"

# auto back and forth was breaking config workspace spawning 
workspace_auto_back_and_forth no

# move to the desired workspaces at login - without this the default starting workspaces will be "1" and "2"
# replace DP-0 and DVI-D-0 with the left and right display output (xrandr -q to get the outputs)
workspace "Dashboard" output DP-0
workspace "Notes" output DVI-D-0

# workspace mode 
mode "workspace" {
        # Add a workspace on the left or right
        bindsym l mode "workspace left"
        bindsym r mode "workspace right"
        
        # Move the focused workspace to the display on the right or left
        bindsym Left exec i3-msg move workspace to output left && i3-msg  mode "default"
        bindsym Right exec i3-msg move workspace to output right && i3-msg  mode "default"
        
        # VM workspace mode
        bindsym v mode "vm workspace"
        
        # Go to named workspace
        bindsym s exec i3-msg workspace "System" && i3-msg mode "default"
        bindsym b exec i3-msg workspace "Browser" && i3-msg mode "default"
        bindsym c exec i3-msg workspace "Config" && i3-msg mode "default"
        bindsym r exec i3-msg workspace "Research" && i3-msg mode "default"
        bindsym 0 exec i3-msg workspace "Dashboard" && i3-msg mode "default"
        bindsym n exec i3-msg workspace "Notes" && i3-msg mode "default"
        bindsym 2 exec i3-msg workspace "Communications" && i3-msg mode "default"
        bindsym 3 exec i3-msg workspace "Development" && i3-msg mode "default"
        bindsym 4 exec i3-msg workspace "SSR" && i3-msg mode "default"
        bindsym v exec i3-msg workspace "Virt" && i3-msg mode "default"
        bindsym a exec i3-msg workspace "Accounts" && i3-msg mode "default"
        bindsym f exec i3-msg workspace "Finance" && i3-msg mode "default"
        bindsym m exec i3-msg workspace "Media" && i3-msg mode "default"
        bindsym t exec i3-msg workspace "TV" && i3-msg mode "default"

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+w mode "default"
}

bindsym $mod+w mode "workspace"

# Launch a workspace on the left display ($mod+w, then l to enter this mode)
mode "workspace left" {
        bindsym s exec i3-msg focus output DP-0 && i3-msg workspace "System" && i3-msg mode "default"
        bindsym b exec i3-msg focus output DP-0 && i3-msg workspace "Browser" && i3-msg mode "default"
        bindsym c exec i3-msg focus output DP-0 && i3-msg workspace "Config" && i3-msg mode "default"
        bindsym r exec i3-msg focus output DP-0 && i3-msg workspace "Refresh" && i3-msg mode "default"
        bindsym 0 exec i3-msg focus output DP-0 && i3-msg workspace "Dashboard" && i3-msg mode "default"
        bindsym n exec i3-msg focus output DP-0 && i3-msg workspace "Notes" && i3-msg mode "default"
        bindsym 2 exec i3-msg focus output DP-0 && i3-msg workspace "Communications" && i3-msg mode "default"
        bindsym 3 exec i3-msg focus output DP-0 && i3-msg workspace "Development" && i3-msg mode "default"
        bindsym 4 exec i3-msg focus output DP-0 && i3-msg workspace "SSR" && i3-msg mode "default"
        bindsym v exec i3-msg focus output DP-0 && i3-msg workspace "Virt" && i3-msg mode "default"
        bindsym a exec i3-msg focus output DP-0 && i3-msg workspace "Accounts" && i3-msg mode "default"
        bindsym f exec i3-msg focus output DP-0 && i3-msg workspace "Finance" && i3-msg mode "default"
        bindsym m exec i3-msg focus output DP-0 && i3-msg workspace "Media" && i3-msg mode "default"
        
        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+w mode "default"
}

# Launch a workspace on the right display ($mod+w, then r to enter this mode)
mode "workspace right" {
        bindsym s exec i3-msg focus output DVI-D-0 && i3-msg workspace "System && i3-msg mode "default"
        bindsym b exec i3-msg focus output DVI-D-0 && i3-msg workspace "Browser && i3-msg mode "default"
        bindsym c exec i3-msg focus output DVI-D-0 && i3-msg workspace "Config" && i3-msg mode "default"
        bindsym r exec i3-msg focus output DVI-D-0 && i3-msg workspace "Research" && i3-msg mode "default"
        bindsym 0 exec i3-msg focus output DVI-D-0 && i3-msg workspace "Dashboard" && i3-msg mode "default"
        bindsym n exec i3-msg focus output DVI-D-0 && i3-msg workspace "Notes" && i3-msg mode "default"
        bindsym 2 exec i3-msg focus output DVI-D-0 && i3-msg workspace "Communications" && i3-msg mode "default"
        bindsym 3 exec i3-msg focus output DVI-D-0 && i3-msg workspace "Development" && i3-msg mode "default"
        bindsym 4 exec i3-msg focus output DVI-D-0 && i3-msg workspace "SSR" && i3-msg mode "default"
        bindsym v exec i3-msg focus output DVI-D-0 && i3-msg workspace "Virt" && i3-msg mode "default"
        bindsym a exec i3-msg focus output DVI-D-0 && i3-msg workspace "Accounts" && i3-msg mode "default"
        bindsym f exec i3-msg focus output DVI-D-0 && i3-msg workspace "Finance" && i3-msg mode "default"
        bindsym m exec i3-msg focus output DVI-D-0 && i3-msg workspace "Media" && i3-msg mode "default"	

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+w mode "default"
}

# VM workspace mode ($mod+w then v to enter this mode)
# this mode adds VM workspaces to both displays
mode "vm workspace" {
        bindsym 0 exec i3-msg focus output DP-0 && i3-msg workspace "VM0-L" && i3-msg focus output DVI-D-0 && i3-msg workspace "VM0-R" && i3-msg mode "default"
        bindsym 1 exec i3-msg focus output DP-0 && i3-msg workspace "VM1-L" && i3-msg focus output DVI-D-0 && i3-msg workspace "VM1-R" && i3-msg mode "default"
        bindsym 2 exec i3-msg focus output DP-0 && i3-msg workspace "VM2-L" && i3-msg focus output DVI-D-0 && i3-msg workspace "VM2-R" && i3-msg mode "default"
        bindsym 3 exec i3-msg focus output DP-0 && i3-msg workspace "VM3-L" && i3-msg focus output DVI-D-0 && i3-msg workspace "VM3-R" && i3-msg mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+w mode "default"Dashboard
}                     

# move focused container to workspace
mode "move" {
        bindsym s exec i3-msg move container to workspace "System" && i3-msg mode "default"
        bindsym b exec i3-msg move container to workspace "Browser && i3-msg mode "default"
        bindsym c exec i3-msg move container to workspace "Config" && i3-msg mode "default"
        bindsym r exec i3-msg move container to workspace "Research" && i3-msg mode "default"
        bindsym 0 exec i3-msg move container to workspace "Dashboard" && i3-msg mode "default"
        bindsym n exec i3-msg move container to workspace "Notes" && i3-msg mode "default"
        bindsym 2 exec i3-msg move container to workspace "Communications" && i3-msg mode "default"
        bindsym 3 exec i3-msg move container to workspace "Development" && i3-msg mode "default"
        bindsym 4 exec i3-msg move container to workspace "SSR" && i3-msg mode "default"
        bindsym v exec i3-msg move container to workspace "Virt" && i3-msg mode "default"
        bindsym a exec i3-msg move container to workspace "Accounts" && i3-msg mode "default"
        bindsym f exec i3-msg move container to workspace "Finance" && i3-msg mode "default"
        bindsym m exec i3-msg move container to workspace "Media" && i3-msg mode "default"
        bindsym t exec i3-msg move container to workspace "TV" && i3-msg mode "default"

        # Move the focused window to the scratchpad
        bindsym h move scratchpad; mode "default"
                
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}

bindsym $mod+m mode "move"

# Layout mode - change container layout
mode "layout" {
        # stacked
        bindsym 3 exec i3-msg layout stacking && i3-msg mode "default"
        # tabbed
        bindsym 2 exec i3-msg layout tabbed && i3-msg mode "default"
        # toggle split
        bindsym 1 exec i3-msg layout toggle split && i3-msg mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $alt+l mode "default"
}

bindsym $alt+l mode "layout
	
