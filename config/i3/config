# Define the modifier keys 
# Mod4 = Windows/Super key
set $mod Mod4
# Mod1 = Alt
set $alt Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 12

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart

#for bare metal install, uncomment below and set to your outputs
set $display_output_left DP-0
set $display_output_right DVI-D-0
set $display_output_top HDMI-0
include ~/.config/i3/config.d/baremetal.conf

#for kvm-qemu guest install, uncomment below
#set $display_output_left Virtual-1
#set $display_output_right Virtual-2
#set $display_output_top Virtual-3
#include ~/.config/i3/config.d/vmguest.conf

include ~/.config/i3/config.d/workspaces.conf

# Set Gaps
gaps inner 5

include ~/.config/i3/config.d/containers.conf

include ~/.config/i3/config.d/execmodes.conf

include ~/.config/i3/config.d/keybinds.conf

include ~/.config/i3/config.d/start.conf

# reload the configuration file
bindsym $mod+Shift+c exec i3-msg reload && notify-send "Reloaded i3 config"
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r exec i3-msg restart && notify-send "Restarted i3 in place"
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec i3-msg exit

